<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/easyReadingBackground</item>
        <item name="actionMenuTextAppearance">@style/myActionMenuTextAppearance</item>
    </style>
    
    <style name="myActionMenuTextAppearance" parent="android:TextAppearance.Medium">
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
